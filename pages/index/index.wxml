<view class="container">
    <swiper indicator-dots="{{ indicatorDots }}" autoplay="{{ autoplay }}" interval="{{ interval }}" duration="{{ duration }}" circular="{{ circular }}">
        <block wx:for="{{ gallery }}" wx:key="{{ item.id }}">
            <swiper-item>
                <image src="{{ item.imageurl }}" width="350" height="250" />
            </swiper-item>
        </block>
    </swiper>
    <view>
        <button bindtap='toMakeAppointment'>预约挂号</button>
        <button>敬请期待</button>
    </view>

    <scroll-view>
        <text>{{ description }}</text>
    </scroll-view>

    <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{ scale }}" markers="{{markers}}" show-location style="width: 100%; height: 300px;"></map>

