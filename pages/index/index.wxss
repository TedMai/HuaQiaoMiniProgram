.functional-area {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
	width: 100%;
	height: 7rem;
    margin: 1rem 0;
}

.functional-item, .description {
	display: flex;
    flex-direction: column;
}

.functional-item {
    justify-content: center;
    align-items: center;
	width: 50%;
	height: 100%;
	/* border: 0.1px solid #CCC; */
}

.functional-item image {
    width: 4.5rem;
    height: 4.5rem;
}

.functional-item text {
    font-size: 0.8rem;
}

.hospital-swiper {
    width: 100%;
    height: 14rem;
}

.hospital-swiper-item {
    width: 100%;
}

.field-label{
	font-size: 1.5rem;
	font-weight: 'bold';
	margin: 1rem 0.3rem;
	color: grey;
}

.description-text{
	font-size: 0.8rem;
	margin: 0 0.3rem;
}

