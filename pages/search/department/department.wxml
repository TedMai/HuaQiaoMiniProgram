<!--pages/search/department/department.wxml-->
<view class='container'>
    <view class='superior'>
        <view wx:for='{{ superiorDepartments }}' wx:key='{{ item.id }}' data-departmentid='{{ item.id }}' bindtap='toShowOrdinateDepartments' class='superior-item'>
            <text>{{ item.name }}</text>
        </view>
    </view>

    <view class='subordinate'>
        <view wx:for="{{ subordinateDepartments }}" wx:key="{{ item.id }}" data-department='{{ item }}' bindtap='toShowDoctorList' class='subordinate-item'>
            <text>{{ item.name }}</text>
        </view>
    </view>
</view>